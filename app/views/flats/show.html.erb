<div class="container mt-3">
  <div class="row">
    <div class="col-8">
      <div class="flat-show-card">
        <h1><%= @flat.name %></h1>
        <p class=""flat-show-address>
          <%= @flat.address %>
        </p>
      </div>
      <div class="flat-show-card">
        <h3>Une petite description</h3>
        <p><%= @flat.description %></p>
      </div>
      <div class="flat-show-card">
        <h3>Details</h3>
