

<div class="container">
  <h1>All our Flats (<%= @flats.count %>)</h1>
  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-4">
        <div class="card mb-3">
          <div class="card-body bg-light">
            <h5 class="card-title"><%= flat.name %></h5>
            <h6 class="card-subtitle mb-2 text-muted"><%= flat.address %></h6>
            <p class="card-text"><%= flat.description %></p>
            <i class="fas fa-users-cog"></i>
            <%= flat.number_of_guests %>
            <i class="fas fa-euro-sign"></i>
            <%= flat.price_per_night %>
          </div>
          <div class="card-footer bg-transparent">
            <%= link_to 'More info', flat_path(flat), class: 'card-link' %>
            <%= link_to 'Edit', flat_path(flat), class: 'text-warning' %>
            <%= link_to 'Remove', flat_path(flat), class: 'text-danger' %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


